[time]
command=date '+%a, %b %d %I:%M:%S %p'
interval=1

[battery]
command=$HOME/.config/i3blocks/battery_status.sh
interval=3

[volume]
label=
command=~/.config/i3blocks/volume.sh
interval=1

[bluetooth]
command=~/.config/i3blocks/bluetooth.sh
interval=10
label=

